<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_baliselist_frag"
    android:background="@drawable/sailcloth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afei.atpif.BaliseListFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:id="@+id/layout_scroll_title"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:minHeight="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="时间"
                android:textColor="#850" />

            <com.afei.atpif.CustomListView.CHScrollView
                android:id="@+id/item_scroll_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="公里标"
                        android:textColor="#850" />

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="数据类型"
                        android:textColor="#850" />

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="数据内容"
                        android:textColor="#850" />

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="备注信息"
                        android:textColor="#850" />

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="应答器ID"
                        android:textColor="#850" />

                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="预留"
                        android:textColor="#850" />
                </LinearLayout>
            </com.afei.atpif.CustomListView.CHScrollView>
        </LinearLayout>

        <com.afei.atpif.CustomListView.AutoListView
            android:id="@+id/scroll_list"
            android:background="@drawable/sailcloth"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/layout_scroll_title"
            android:cacheColorHint="@android:color/transparent" />

    </RelativeLayout>


</FrameLayout>
